<div>
  <h2>Requester</h2>


  <p><%= link_to 'All Requesters', requesters_path %></p>

  <p>
    <h3>Info</h3>
    <p> company name: <%= @requester.company_name %><p>
    <p> email: <%= @requester.email %></p>
    <p> cnpj: <%= @requester.cnpj %></p>
    <p> credits requestes: <%= @requester.credits.count %></p>
    <p> credits accepted: <%= @requester.credits.where(already_accepted: true).count%></p>
  </p>
  <hr>

  <p>
    <h3>Phones</h3>
    <% @requester.phones.each_with_index do |phone,index| %>
      <p>
        <p>Number(<%= index + 1 %>): <%= phone.number %></p>
      </p>
    <% end %>
  </p>


  <hr>

  <p>
    <h3>Addresses</h3>
    <% @requester.addresses.each_with_index do |address,index| %>
      <p>
        <p>Adress(<%= index + 1%>)</p>
        <p>State: <%= address.state %></p>
        <p>City: <%= address.city %></p>
        <p>St: <%= address.street %></p>
        <p>Number: <%= address.number %></p>
      </p>
    <% end %>
  </p>


  <hr>

  <h3>Credits requests</h3>
  <p><%= t(:notice_accepted) %></p>
  <% @requester.credits.each_with_index do |credit,index| %>
    <p>
      <h5>Credit request(<%= index + 1%>)</h5>
      <p> Loan: R$ <%= credit.loan.to_s %></p>
      <p> tax: <%= credit.tax %></p>
      <p> parcel: R$ <%= credit.parcel.to_s %></p>
      <p> periods: <%= credit.periods%></p>
      <p>Status: <%= credit.already_accepted ? t(:accepted) : t(:pending) %></p>
      <%= link_to 'details', credit_path(credit)%>
      <hr>
    </p>
  <% end %>
</div>