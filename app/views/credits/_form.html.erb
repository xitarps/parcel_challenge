<%= form_with model: @credit, local: true do |f| %>

  <div class="container">
    <div>
      <h2>New Credit</h2>
    </div>
    <div>
      plese, avoid special characters<br>
      like: (/ : , %) etc
      <hr>
    </div>
    <div>
      <%= f.label :loan, t(:loan) %>(only numbers):
    </div>
    <div>
      <%= f.number_field(:loan, in: 1.0..1000000.0, step: 0.5, placeholder: 'ex: 100000') %>
    </div>
  </div>
  <div class="container">
    <div>
      <%= f.label :tax, t(:tax) %>(decimal):
    </div>
    <div>
      <%= f.number_field(:tax, in: 1.0..20.0, step: 0.1, placeholder: 'ex: 1.5') %><br/>
    </div>
  </div>
  <div class="container">
    <div>
      <%= f.label :periods, t(:periods) %>(only numbers):
    </div>
    <div>
      <%= f.number_field(:periods, in: 1.0..600.0, step: 1.0, placeholder: 'ex: 12') %><br/>
    </div>
  </div>
  <div class="container">
    <br>
      <%= f.submit "Save" , class:"btn btn-outline-secondary"%>
    
  </div>
<% end %>